<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_category"
    app:startDestination="@id/categoryPage">

    <fragment
        android:id="@+id/categoryPage"
        android:name="com.tsab.pikapp.view.categoryMenu.CategoryPage"
        android:label="fragment_category_page"
        tools:layout="@layout/fragment_category_page">
        <action
            android:id="@+id/action_categoryPage_to_editCategoryPage"
            app:destination="@id/editCategoryPage" />
        <action
            android:id="@+id/action_categoryPage_to_addCategoryPage"
            app:destination="@id/addCategoryPage" />
        <action
            android:id="@+id/action_categoryPage_to_sortCategoryPage"
            app:destination="@id/sortCategoryPage" />
    </fragment>
    <fragment
        android:id="@+id/editCategoryPage"
        android:name="com.tsab.pikapp.view.categoryMenu.EditCategoryPage"
        android:label="fragment_edit_category_page"
        tools:layout="@layout/fragment_edit_category_page">
        <action
            android:id="@+id/action_editCategoryPage_to_categoryPage"
            app:destination="@id/categoryPage" />
    </fragment>
    <fragment
        android:id="@+id/addCategoryPage"
        android:name="com.tsab.pikapp.view.categoryMenu.AddCategoryPage"
        android:label="fragment_add_category_page"
        tools:layout="@layout/fragment_add_category_page">
        <action
            android:id="@+id/action_addCategoryPage_to_categoryPage"
            app:destination="@id/categoryPage" />
    </fragment>
    <fragment
        android:id="@+id/sortCategoryPage"
        android:name="com.tsab.pikapp.view.categoryMenu.SortCategoryPage"
        android:label="fragment_sort_category_page"
        tools:layout="@layout/fragment_sort_category_page">
        <action
            android:id="@+id/action_sortCategoryPage_to_categoryPage"
            app:destination="@id/categoryPage" />
    </fragment>
</navigation>