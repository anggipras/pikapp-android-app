<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_store"
    app:startDestination="@id/storeWelcomeFragment">

    <fragment
        android:id="@+id/storeWelcomeFragment"
        android:name="com.tsab.pikapp.view.store.StoreWelcomeFragment"
        android:label="fragment_store_welcome"
        tools:layout="@layout/fragment_store_welcome">
        <action
            android:id="@+id/action_storeWelcomeFragment_to_storeHomeFragment"
            app:destination="@id/storeHomeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/storeHomeFragment"
        android:name="com.tsab.pikapp.view.store.StoreHomeFragment"
        android:label="StoreHomeFragment">
        <action
            android:id="@+id/actionToStoreMyProductFragment"
            app:destination="@id/storeMyProductFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/storeMyProductFragment"
        android:name="com.tsab.pikapp.view.store.myProduct.StoreMyProductFragment"
        android:label="StoreMyProductFragment">
        <action
            android:id="@+id/actionToStoreMyProductFormFragment"
            app:destination="@id/storeMyProductFormFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/storeMyProductFormFragment"
        android:name="com.tsab.pikapp.view.store.myProduct.StoreMyProductFormFragment"
        android:label="fragment_store_my_product_form"
        tools:layout="@layout/fragment_store_my_product_form" >
        <argument
            android:name="isAdd"
            app:argType="boolean" />
        <argument
            android:name="pid"
            app:argType="string" />
    </fragment>
</navigation>