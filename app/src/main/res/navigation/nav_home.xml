<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bejohen.pikapp.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionToCategoryFragment"
            app:destination="@id/categoryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.bejohen.pikapp.view.categoryProduct.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category">
        <argument
            android:name="categoryid"
            app:argType="long" />
        <action
            android:id="@+id/actionToMerchantDetailFragment"
            app:destination="@id/merchantDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/actionFromCategoryFragmentToProductDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/merchantDetailFragment"
        android:name="com.bejohen.pikapp.view.categoryProduct.merchantDetail.MerchantDetailFragment"
        android:label="fragment_merchant_detail"
        tools:layout="@layout/fragment_merchant_detail">
        <argument
            android:name="mid"
            app:argType="string" />
        <action
            android:id="@+id/actionToProductDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.bejohen.pikapp.view.categoryProduct.productDetail.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="pid"
            app:argType="string" />
        <argument
            android:name="distance"
            app:argType="string" />
    </fragment>
</navigation>