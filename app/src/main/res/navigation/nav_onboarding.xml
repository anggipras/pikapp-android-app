<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onboarding"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.bejohen.pikapp.view.onboarding.OnboardingViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_onboarding_view_pager">
        <action
            android:id="@+id/actionToLoginOnboardingFragment"
            app:destination="@id/loginOnboardingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/actionToSignupOnboardingFragment"
            app:destination="@id/signupOnboardingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/loginOnboardingFragment"
        android:name="com.bejohen.pikapp.view.onboarding.login.LoginOnboardingFragment"
        android:label="fragment_login_onboarding"
        tools:layout="@layout/fragment_login_onboarding" />
    <fragment
        android:id="@+id/signupOnboardingFragment"
        android:name="com.bejohen.pikapp.view.onboarding.login.SignupOnboardingFragment"
        android:label="fragment_signup_onboarding"
        tools:layout="@layout/fragment_signup_onboarding">
        <action
            android:id="@+id/actionToSignupOnboardingSuccessFragment"
            app:destination="@id/signupOnboardingSuccessFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/actionFromSignupOnboardingFragmentToLoginOnboardingFragment"
            app:destination="@id/loginOnboardingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/signupOnboardingSuccessFragment"
        android:name="com.bejohen.pikapp.view.onboarding.login.SignupOnboardingSuccessFragment"
        android:label="fragment_signup_onboarding_success"
        tools:layout="@layout/fragment_signup_onboarding_success">
        <action
            android:id="@+id/actionBackToLoginFragment"
            app:destination="@id/loginOnboardingFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>