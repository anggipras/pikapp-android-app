<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="merchantItem"
            type="com.bejohen.pikapp.models.model.MerchantList" />

        <variable
            name="Listener"
            type="com.bejohen.pikapp.view.categoryProduct.MerchantClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/top_header_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="@{Listener::onMerchantClicked}"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchantId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(merchantItem.merchantID)}"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imageViewMerchant"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:imageUrl="@{merchantItem.merchantLogo}"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/merchantName"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@{String.valueOf(merchantItem.merchantName)}"
                    android:textColor="#000000"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="13sp"
                    app:autoSizeTextType="uniform" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/merchantCategory"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/proximanova_regular"
                            android:text=""
                            android:textColor="@color/colorGrey"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageViewStar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/merchantRating"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/proximanova_bold"
                                android:text="@{String.valueOf(merchantItem.merchantRating)}"
                                android:textColor="#000000"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                            <ImageView
                                android:id="@+id/imageViewDistance"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_directions_walk"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/merchantDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/proximanova_bold"
                                android:text="@{String.valueOf(merchantItem.merchantDistance)}"
                                android:textColor="#000000"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/merchantDistanceMinute"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:fontFamily="@font/proximanova_regular"
                                android:text=""
                                android:textColor="@color/colorGrey"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageViewFavorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_favorite"
                        app:tint="@color/placeholderBackground"
                        android:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#f0efef"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clipToPadding="false"
                android:scrollbars="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/garis2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#f0efef"
            android:orientation="horizontal" />
    </LinearLayout>
</layout>