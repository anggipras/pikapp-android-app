<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tableNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meja 1"
                    android:fontFamily="@font/proximanova_semibold"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tableStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makan di Tempat"
                    android:fontFamily="@font/proximanova_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 juni"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/borderSubtle"/>

                    <TextView
                        android:id="@+id/orderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:09"
                        android:fontFamily="@font/proximanova_regular"
                        android:textColor="@color/borderSubtle"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="new"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:fontFamily="@font/proximanova_semibold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_red_square"/>

                <TextView
                    android:id="@+id/paymentStatus"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="unpaid"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:fontFamily="@font/proximanova_semibold"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_red_square"
                    android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 menit yang lalu"
                    android:fontFamily="@font/proximanova_semibold"
                    android:textColor="@color/borderSubtle"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MenuItemRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/lightGrey"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menuCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total 3 items:"
                    android:fontFamily="@font/proximanova_semibold"
                    android:textSize="12sp"
                    android:textColor="@color/borderSubtle"/>

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 70.000"
                    android:textColor="@color/black"
                    android:fontFamily="@font/proximanova_semibold"
                    android:textSize="12sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/rejectButton"
                android:layout_marginLeft="140dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/button_red_transparent"
                android:text="Tolak"
                android:textAllCaps="false"
                android:fontFamily="@font/proximanova_semibold"
                android:textSize="12sp"
                android:textColor="@color/red"/>
            <Button
                android:id="@+id/acceptButton"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/button_green_transparent"
                android:text="Sudah Bayar"
                android:textAllCaps="false"
                android:fontFamily="@font/proximanova_semibold"
                android:textSize="12sp"
                android:textColor="@color/green"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>