<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@drawable/button_dark_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atur Tanggal Pengiriman"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="#aaaaaa"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Tanggal Pengiriman"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:drawableTint="#aaaaaa"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/nowDate"
                        android:layout_width="@dimen/_82sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/btn_date_disable"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="Sekarang"/>

                    <Button
                        android:id="@+id/customDate"
                        android:layout_width="@dimen/_126sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_date_disable"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:drawableTint="#aaaaaa"
                        android:fontFamily="@font/inter_regular"
                        android:text="Custom Tanggal"
                        android:textAllCaps="false"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintLeft_toRightOf="@id/nowDate"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <DatePicker
                    android:layout_width="@dimen/_257sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/datePicker"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:theme="@style/AppTheme1"/>

                <TextView
                    android:id="@+id/jamTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="#aaaaaa"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Jam Pengiriman"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawableTint="#aaaaaa"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/chooseTime"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/nowTime"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/btn_date_disable"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="10.00"/>

                    <Button
                        android:id="@+id/nowTimeSecond"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/btn_date_disable"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/nowTime"
                        android:text="11.00"/>

                    <Button
                        android:id="@+id/nowTimeThird"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/btn_date_disable"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/nowTimeSecond"
                        android:text="12.00"/>


                    <Button
                        android:id="@+id/customTime"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:background="@drawable/btn_date_disable"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:drawableTint="#aaaaaa"
                        android:fontFamily="@font/inter_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/nowTimeThird"
                        android:text="Pilih Jam"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:timePickerMode="spinner"
                    android:theme="@style/AppTheme1"
                    android:id="@+id/timePick"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <Button
                            android:id="@+id/btnSaveDate"
                            android:layout_width="0dp"
                            android:layout_height="47dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="23dp"
                            android:background="@drawable/button_dark_gray"
                            android:text="Simpan"
                            android:textAllCaps="false"
                            android:fontFamily="@font/inter_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/saveStateBtn"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <Button
                            android:id="@+id/btnSaveDateTime"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_green_square"
                            android:text="Simpan"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textAllCaps="false"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <Button
                            android:id="@+id/cancel"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            style="?android:attr/borderlessButtonStyle"
                            android:text="Batal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textAllCaps="false"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_12sdp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>