<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".view.homev2.menu.tokopedia.EtalaseListPage">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Header layout -->
            <include
                android:id="@+id/headerLayout"
                layout="@layout/layout_header_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/headerHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/etalase_header"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/headerLayout"
                app:layout_constraintStart_toStartOf="@id/headerLayout" />

            <!-- Daftar kategori -->
            <TextView
                android:id="@+id/daftarKategoriHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/etalase_daftar_etalase_header"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLayout" />

            <ImageView
                android:id="@+id/daftarEtalaseChangeOrderButton"
                android:layout_width="27dp"
                android:layout_height="20dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="@string/cd_change_order_button"
                android:src="@drawable/ic_change_order"
                app:layout_constraintBottom_toBottomOf="@id/daftarKategoriHeaderText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/daftarKategoriHeaderText" />

            <View
                android:id="@+id/daftarKategoriDivider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@color/lightGrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/daftarKategoriHeaderText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daftarKategoriRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/daftarKategoriDivider"
                tools:itemCount="3"
                tools:listitem="@layout/item_title_description_action" />

            <!-- Tambah kategori button -->
            <ImageView
                android:id="@+id/tambahEtalaseImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/daftarKategoriRecyclerView"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tambahEtalaseHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/etalase_tambah_etalase_header"
                android:textColor="@color/yellow"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/tambahEtalaseImage"
                app:layout_constraintStart_toEndOf="@id/tambahEtalaseImage"
                app:layout_constraintTop_toTopOf="@id/tambahEtalaseImage" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/tambahEtalaseGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tambahEtalaseImage,tambahEtalaseHeaderText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/loadingOverlay"
        layout="@layout/layout_loading_overlay"
        android:visibility="gone" />

</RelativeLayout>
</layout>
