<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_baseline_close_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Filter"
        android:textColor="#000000"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line" />

    <CheckBox
        android:id="@+id/pikapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:paddingLeft="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:paddingRight="210dp"
        android:fontFamily="@font/proximanova_bold"
        android:text="Pikapp"
        android:textAlignment="textStart"
        android:textColor="#767676"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/grab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/proximanova_bold"
        android:layoutDirection="rtl"
        android:paddingLeft="30dp"
        android:paddingRight="191dp"
        android:text="GrabFood"
        android:textAlignment="textStart"
        android:textColor="#767676"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/tokopedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/proximanova_bold"
        android:layoutDirection="rtl"
        android:paddingLeft="30dp"
        android:paddingRight="189dp"
        android:text="Tokopedia"
        android:textAlignment="textStart"
        android:textColor="#767676"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/shopee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/proximanova_bold"
        android:layoutDirection="rtl"
        android:paddingLeft="30dp"
        android:paddingRight="207.7dp"
        android:text="Shopee"
        android:textAlignment="textStart"
        android:textColor="#767676"
        android:textSize="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:background="@drawable/button_green_small"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat"
            android:text="Tampilkan 0 Pesanan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>