<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="50dp"
    android:orientation="vertical"
    tools:context=".view.onboarding.login.BankNameFragment">

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_baseline_close_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pilih Bank"
        android:textColor="#000000"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line" />

    <RadioGroup
        android:id="@+id/bankname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:checkedButton="@id/BCA">

        <RadioButton
            android:id="@+id/BCA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/proximanova_regular"
            android:layoutDirection="rtl"
            android:paddingRight="70dp"
            android:text="BANK CENTRAL ASIA (BCA)"
            android:textAlignment="textStart"
            android:textColor="#767676"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/BNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proximanova_regular"
            android:layoutDirection="rtl"
            android:paddingRight="70dp"
            android:text="BANK NEGARA INDONESIA (BNI)"
            android:textAlignment="textStart"
            android:textColor="#767676"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/BRI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proximanova_regular"
            android:layoutDirection="rtl"
            android:paddingRight="70dp"
            android:text="BANK RAKYAT INDONESIA (BRI)"
            android:textAlignment="textStart"
            android:textColor="#767676"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/Mandiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proximanova_regular"
            android:layoutDirection="rtl"
            android:paddingRight="70dp"
            android:text="BANK MANDIRI"
            android:textAlignment="textStart"
            android:textColor="#767676"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/CIMB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proximanova_regular"
            android:layoutDirection="rtl"
            android:paddingRight="70dp"
            android:text="BANK CIMB NIAGA"
            android:textAlignment="textStart"
            android:textColor="#767676"
            android:textSize="15dp" />

    </RadioGroup>

    <ImageButton
        android:id="@+id/btnoke"
        android:layout_width="307dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/okebtn" />

</LinearLayout>