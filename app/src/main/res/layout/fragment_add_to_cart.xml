<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.categoryProduct.AddToCartFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="30dp"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/circular_dialog"
                app:tint="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/proximanova_semibold"
                    android:text="Jumlah"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/buttonDecrement"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_darkgray_rounded"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textQuantity"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/buttonIncrement"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_green_rounded"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/proximanova_semibold"
                android:text="Catatan"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:fontFamily="@font/proximanova_regular"
                android:gravity="start|top"
                android:hint="contoh: warna hitam, tidak pakai sambal"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonAddToCart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_green"
                android:fontFamily="@font/proximanova_bold"
                android:text="ADD TO CART"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/transparent" />


        </LinearLayout>


    </LinearLayout>
</layout>