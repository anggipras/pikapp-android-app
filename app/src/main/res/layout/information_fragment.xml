<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.other.otherSettings.informationSetting.InformationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_informationSetting"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@drawable/headersettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/back_button_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_back_arrow"
            android:fontFamily="@font/montserrat"
            android:text="Kembali"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/proximanova_bold"
            android:text="Informasi Restoran"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/information_banner"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:src="@drawable/merchant_sample"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_informationSetting"/>

    <ImageView
        android:id="@+id/information_banner_icChange"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_drawimg"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="@id/information_banner"
        app:layout_constraintBottom_toBottomOf="@id/information_banner"
        android:visibility="visible"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="132dp"
        app:cardCornerRadius="47dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_informationSetting">

        <ImageView
            android:id="@+id/information_img"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:alpha="0.3"
            android:src="@drawable/article_img"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/information_img_icChange"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_drawimg"
            android:layout_gravity="center"
            android:visibility="visible"/>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardImage_view">

        <TextView
            android:id="@+id/restaurant_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/montserrat"
            android:text="Nama Restoran"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_required_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/star"
            android:textColor="@color/red"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_name_text"
            app:layout_constraintStart_toEndOf="@id/restaurant_name_text"
            app:layout_constraintTop_toTopOf="@id/restaurant_name_text" />

        <EditText
            android:id="@+id/restaurant_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="@color/borderSubtle"
            android:fontFamily="@font/proximanova_regular"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/restaurant_name_text" />

        <TextView
            android:id="@+id/restaurant_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Alamat Restoran"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/restaurant_name_input"
            app:layout_constraintTop_toBottomOf="@id/restaurant_name_input" />

        <TextView
            android:id="@+id/address_required_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/star"
            android:textColor="@color/red"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_address_text"
            app:layout_constraintStart_toEndOf="@id/restaurant_address_text"
            app:layout_constraintTop_toTopOf="@id/restaurant_address_text" />

        <EditText
            android:id="@+id/restaurant_address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="@color/borderSubtle"
            android:fontFamily="@font/proximanova_regular"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/restaurant_address_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/save_information_button"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:background="@drawable/button_green_small"
        android:text="SIMPAN"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"/>

    <Button
        android:id="@+id/save_information_back"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:background="@drawable/button_green_small"
        android:text="SIMPAN"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>