<!--                        app:layout_constraintBottom_toBottomOf="parent">-->

<!--                        <ImageView-->
<!--                            android:id="@+id/driverPhoto"-->
<!--                            android:layout_width="@dimen/_25sdp"-->
<!--                            android:layout_height="@dimen/_25sdp"-->
<!--                            android:src="@color/lightGrey"-->
<!--                            android:scaleType="centerCrop"/>-->

<!--                    </androidx.cardview.widget.CardView>-->

                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Budi Doremi"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/driverPhone"/>

                    <TextView
                        android:id="@+id/driverPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:text="+6281296000823"
                        android:textColor="@color/borderSubtle"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@+id/driverName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/callDriverBtn"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:src="@drawable/ic_call"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/dividerShipping"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/lightGrey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/driver_info" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_transaction_track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividerShipping"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_transaction_tracking" />

                <include
                    android:id="@+id/loadingOverlay"
                    layout="@layout/layout_loading_overlay"
                    android:visibility="gone" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>