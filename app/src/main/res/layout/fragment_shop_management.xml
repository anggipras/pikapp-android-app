<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.other.otherSettings.shopMgmtSetting.ShopManagementFragment"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_shopSetting"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@drawable/headersettings">

        <TextView
            android:id="@+id/back_button_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_back_arrow"
            android:fontFamily="@font/montserrat"
            android:text="Kembali"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/proximanova_bold"
            android:text="Jam Buka Restoran"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/restaurant_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constraintLayout_shopSetting"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/proximanova_semibold"
            android:text="Status Restoran"
            android:textColor="#494949"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/restaurant_status_layout"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_status_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/proximanova_bold"
                android:text="BUKA"
                android:textColor="@color/green"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/restaurant_status_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/proximanova_regular"
                android:text="Restoran Anda sedang berada di jam buka"
                android:textColor="@color/textSubtle"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/restaurant_autostatus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/proximanova_semibold"
            android:text="Status Restoran"
            android:textColor="#494949"
            android:textSize="18dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurant_autostatus_layout"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restaurant_autostatus_now"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:fontFamily="@font/proximanova_regular"
                android:text="Restoran akan buka dan tutup secara otomatis mengikuti jadwal restoran"
                android:textColor="@color/textSubtle"
                android:textSize="16dp"
                android:layout_marginRight="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/autoTurn_toggle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ToggleButton
                android:id="@+id/autoTurn_toggle"
                android:layout_width="53dp"
                android:layout_height="30dp"
                android:background="@drawable/switch_selector"
                android:checked="true"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/restaurant_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/proximanova_semibold"
            android:text="Jadwal Restoran"
            android:textColor="#494949"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/restaurant_autostatus_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopSchedule_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>