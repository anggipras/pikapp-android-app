<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="13dp"/>
                    <padding android:right="3dp" android:top="3dp" android:left="3dp" android:bottom="3dp"/>
                </shape>
            </item>
            <item
                android:gravity="center|end"
                android:right="10dp"
                android:width="15dp"
                android:height="7dp">
                <bitmap android:src="@drawable/ic_down_arrow"/>
            </item>
        </layer-list>
    </item>
</selector>